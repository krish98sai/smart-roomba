<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriveRoombaFragment">

    <Button
        android:id="@+id/button_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_upward_black_24dp" />

    <Button
        android:id="@+id/button_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_downward_black_24dp" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_rotate_left_black_24dp" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_rotate_right_black_24dp" />

    <Button
        android:id="@+id/button_record_start_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fiber_manual_record_red_24dp" />

    <Button
        android:id="@+id/button_record_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_format_list_bulleted_black_24dp" />

</FrameLayout>